// 出场动画
+(void)animateIn:(UIView *)animateView;
// 入场动画
+(void)animateOut:(UIView *)animateView;

/**
播放音效 默认播放MP3格式

@param source 资源文件名
*/
+(void)PlayAudioMove:(NSString *)source;

/**
播放音效

@param source 资源文件名
@param formatType 资源文件类型 wav mp3 ...
*/
+(void)PlayAudioMove:(NSString *)source
formatType:(NSString *)formatType;


