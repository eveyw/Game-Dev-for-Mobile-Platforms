{

}

//响应手势
- (void)processgestureReconizer:(UIGestureRecognizer *)gesture；
//重现开始和退出
-(void)buttonPressed:(UIButton *)sender
{
if(_delegate && [_delegate respondsToSelector:@selector(startOrQuiteGame:)])
{
[_delegate startOrQuiteGame:sender.tag-10];
}
}
